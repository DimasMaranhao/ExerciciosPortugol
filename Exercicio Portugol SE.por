programa
{
	
	funcao inicio()
	{

		inteiro num

		escreva ("Digite um número: ")
		leia (num)

		se (num != 0) {
			escreva ("O número é diferente de zero")
		}

		se (num == 0) {
			escreva ("O número é igual de zero")
		}

		
	}
}
